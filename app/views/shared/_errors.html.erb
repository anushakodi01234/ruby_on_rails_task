<%
=begin%>
 <% if obj.errors.any? %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <h4 class="alert-heading">The following errors prevented the <%= obj.class.name.downcase %> from being saved</h4>
  <ul>
    <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<button type="button" class="close" data-dismiss="alert" aria-label="Close">
  <span aria-hidden="true">&times;</span>
</button>
</div>
   
 
<% end %> 
<%
=end%>
<% if @errors.present? || obj.errors.any?  %>

<div id="errorToast" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute; top: 0; right: 0;">
<div class="toast-header">
    <strong class="mr-auto">The following errors prevented the <%= obj.class.name.downcase %> from being saved</strong>
 
    <button type="button" onclick="document.getElementById('errorToast').style.display = 'none'" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<div class="toast-body"><ul>
    <% (@errors || obj.errors.full_messages).each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul></div>
</div>

<% end %>

