<h4 class="text">Students Subjects List </h4>
<%= link_to 'Create new Subject', new_subject_path, class: 'btn btn-xs btn-secondary create-button' %>

<div class="row">
<div class="col-9">
<table class="table table-bordered table-hover">
   <thead>
      <tr>
        <th scope="col">SubjectName</th>
         <th scope="col">uuid</th>
        <th colspan="2" class="text-center">Actions</th>
      </tr>
   </thead>
   <tbody>

<% @subjects.each do |subject| %>
     <tr>
 <td scope="row"><%= subject.name %></td> 
 <td class="text-center">
 <% uuid=subject.uuid %>
 <% if uuid %>
   <%= uuid %>
 <% else %>
   <%= "nil" %>
 <% end %>
 </td>
 <td class="text-center"><%= link_to 'Edit',  edit_subject_path(subject), 
                                          class: 'btn btn-sm btn-warning' %></td> 
 <td class="text-center"><%= link_to 'Delete', subject_path(subject), method: :delete, data: {confirm: 'Are you sure?'},
                                          class: 'btn btn-sm btn-danger' %></td>
     </tr>
     <% end %>
     </tbody>
</table>
</div>
</div>


<div class="toast" id="myToast" style="position: absolute; bottom: 0; left: 0;">
 <div class="toast-header">
     <strong class="mr-auto"><i class="fa fa-grav"></i> We miss you!</strong>
     <small>11 mins ago</small>
     <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
 </div>
 <div class="toast-body">
     It's been a long time since you visited us. We've something special for you. <a href="#">Click here!</a>
 </div>
</div>


